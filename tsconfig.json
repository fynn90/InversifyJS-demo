    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir":"./",
    "outDir": "./build",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
